<html>
    <head>
        <title>HomePage</title>
        <link rel="stylesheet" href="/styles/message.css">
    </head>
    <body>
        <div class="container">
            <% for(let i = 0;i < messages.length; i++) { %>
                <div class="message-card">
                    <div class="user"><%= messages[i].user %>:</div>
                    <div class="text"><%= messages[i].text %></div>
                    <div class="date"><%= messages[i].added.toDateString() %></div>
                </div>
            <% } %>
            <button class="new" onclick="window.location.href='/new'">New Message</button>
        </div>
    </body>
</html>